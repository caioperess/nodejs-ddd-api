{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["vitest/globals"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
